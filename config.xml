<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.dingster" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"  xmlns:android="http://schemas.android.com/apk/res/android">
    <name>theDingster</name>
    <description>
      Gives Audio Indication of the charging status of a phone or tablet
    </description>
    <author email="umikeapps@outlook.com">
      UMike Apps : Real Solutions for Real Problems
    </author>
    <content src="index.html" />
    <icon src="icon.png" />

    <preference name="android-minSdkVersion" value="21" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name='phonegap-version' value='cli-9.0.0' />
    <preference name='pgb-builder-version' value='1' />
    <preference name="android-targetSdkVersion" value="29" />

    <gap:config-file platform="android" parent="/manifest/application">
        <activity android:launchMode="singleTask" />
    </gap:config-file>

    <gap:config-file platform="android" parent="/manifest">
        <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /><uses-permission android:name="android.permission.INTERNET" />
    </gap:config-file>

    <plugin name="cordova-plugin-insomnia" version="4.1.0" source="npm" />
    <plugin name="cordova-plugin-background-mode" source="npm" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="phonegap-plugin-battery-status" source="npm" />
    <plugin name="cordova-plugin-media" source="npm" spec="~2.2.0" />

    <access origin="*" />
</widget>
